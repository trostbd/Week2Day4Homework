<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInput">

    <EditText
        android:id="@+id/etInputName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input User Name"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etInputEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input User Email"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/etInputName"/>

    <EditText
        android:id="@+id/etInputPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input User Password"
        android:inputType="text"
        android:layout_below="@+id/etInputEmail"/>

    <Button
        android:id="@+id/btAddUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add User"
        android:layout_below="@+id/etInputPassword"/>

</RelativeLayout>